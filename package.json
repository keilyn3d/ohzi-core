{
  "name": "ohzi-core",
  "version": "9.6.0",
  "description": "OHZI Core Library",
  "source": "src/index.js",
  "module": "build/index.module.js",
  "types": "types/index.d.ts",
  "files": [
    "build",
    "LICENSE",
    "src",
    "types",
    "package.json"
  ],
  "scripts": {
    "preinstall": "yarn setup-submodules && yarn update-submodules && yarn config-hooks",
    "setup-submodules": "yarn setup-pit-submodule ",
    "setup-pit-submodule": "git submodule update --init pit",

    "update-submodules": "yarn update-pit",
    "update-pit": "node update_submodule.mjs pit-js pit",

    "config-hooks": "yarn config-core-hooks && yarn config-submodule-hooks",
    "config-core-hooks": "git config core.hooksPath git_hooks",
    "config-submodule-hooks": "yarn config-pit-hooks",
    "config-pit-hooks": "cd pit && git config core.hooksPath git_hooks && cd ..",

    "build": "rollup -c",
    "create-tag": "cross-var git tag -a \"v$npm_package_version\" -m \"Release Version $npm_package_version\" && cross-var git push origin \"v$npm_package_version\"",
    "update-version": "cross-var echo \"v$npm_package_version\" > .version",
    "fix-syntax": "standardx --fix",
    "generate-types": "npx -p typescript tsc src/* --declaration --allowJs --emitDeclarationOnly --outDir types",
    "upload": "yarn build && npm publish && yarn create-tag",
    "create-view": "node ./tasks/create_view/create_view.mjs",
    "create-component": "node ./tasks/create_component/create_component.mjs",
    "calculate-assets-sizes": "node ./tasks/assets/calculate_sizes.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ohzinteractive/core.git"
  },
  "keywords": [
    "ohzi",
    "core"
  ],
  "author": "OHZI Interactive",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ohzinteractive/core/issues"
  },
  "homepage": "https://github.com/ohzinteractive/core",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "three": "0.148.0"
  },
  "devDependencies": {
    "cross-var": "^1.1.0",
    "rollup": "^2.44.0",
    "rollup-plugin-glslify": "^1.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "standardx": "^7.0.0",
    "typescript": "^4.4.3"
  },
  "standardx": {
    "ignore": [
      "/pit/"
    ]
  }
}
